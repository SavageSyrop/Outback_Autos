<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/model_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModelActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#21207A"
        android:titleTextColor="@color/white"
        android:elevation="10dp"/>

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Mustang"
            android:textColor="@color/black"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="34dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Характеристики"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Макс. мощность"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/power_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="188 л.с."
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Макс. скорость"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/speed_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="206 км/ч"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расход топлива"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/fuel_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.2 л на 100 км"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Макс. крутящий момент"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/torque_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3400-4600 об./мин"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дорожный просвет"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/clearance_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="213 мм."
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Привод"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/drive_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Постоянный полный привод"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>