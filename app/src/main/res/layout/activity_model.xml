<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/model_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModelActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#21207A"
        android:titleTextColor="@color/white"
        android:elevation="10dp"/>

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/model_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Mustang"
            android:textColor="#21207A"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"
            android:text="Price"
            android:textColor="#118C4F"
            android:textSize="34dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Specifications"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horsepower"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/power_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="188 л.с."
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max. speed"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/speed_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="206 км/ч"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel consumption"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fuel_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.2 л на 100 км"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max. torque"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/torque_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3400-4600 об./мин"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clearance"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clearance_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="213 мм."
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drive"
                android:textColor="#21207A"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drive_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Постоянный полный привод"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>